<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <padding android:left="0dp" android:right="0dp" android:top="0dp" android:bottom="1dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Default transparent background -->
            <stroke android:width="1dp" android:color="@android:color/transparent"/> <!-- No visible line -->
        </shape>
    </item>
</selector>